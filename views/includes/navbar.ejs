              fill="none"
              stroke="#333"
              stroke-width="4"
              stroke-dasharray="2,8"
              stroke-linecap="round" />

        <!-- Bold > Arrowhead -->
        <polyline points="145,120 155,130 145,140"
                  fill="none"
                  stroke="#000"
                  stroke-width="6"
                  stroke-linecap="round"
                  stroke-linejoin="round" />
      </svg>

