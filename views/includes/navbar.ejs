<style>
  .btn-search
  {
    background-color:blue;
    color:#fff;
    border-radius:25px;
  }
  .btn-search i
  {
    display:inline;
    margin-right:0.5rem;
  }
  .search-inp
  {
    border-radius:25px;
  }
</style>
<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand d-flex align-items-center gap-2" href="/listings">
      <!-- WanderNest Logo SVG with dotted trail -->
      <svg class="logo-icon" viewBox="0 0 200 200" xmlns="http://www.w3.org/2000/svg">
        <!-- Paper Plane -->
        <polygon points="60,90 110,60 90,110" fill="#2196F3" />
        <polygon points="110,60 80,100 90,110" fill="#1E88E5" />
        <polygon points="80,100 90,110 60,90" fill="#1976D2" />

